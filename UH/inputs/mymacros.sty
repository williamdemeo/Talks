%      Disjoint union symbol
%
%  This will probably cause Real Trouble.  If you don't use computer
%  modern, or if you don't have cmr17 at the right size, just eliminate
%  everything up to the line reading %%%%end of bigudot%%%
%
\font\xxroman=cmr17 scaled \magstep1
\font\xviiroman=cmr17
\def\udot{\mathbin{\ooalign{$\cup$\crcr
   \hfil\raise2pt\hbox{\xviiroman.}\hfil\crcr}}}
%
%% In bigudotx, #1 is displaystyle, etc, #2 is symbol to use for a dot
\def\bigudotx#1#2{\mathop{\smash{\ooalign{$#1\bigcup$\crcr
  \hfil\raise 2pt\hbox{#2}\hfil\crcr}}\vphantom{\bigcup}}}
\def\bigudot{\mathop{\mathchoice%
 {\bigudotx\displaystyle{$\scriptscriptstyle\bullet$}}
 {\bigudotx\textstyle{\xxroman.}}
 {\relax}{\relax}}}
\let\uplus\udot
\let\biguplus\bigudot
