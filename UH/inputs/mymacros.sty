%
\def\makecs#1#2{\makecsX {#1}#2,.}
\def\makecsX#1#2#3.{\onecs{#1}{#2} \ifx#3,\let\next\eatit
   \else\let\next\makecsX\fi 
   \next{#1}#3.}
\def\onecs#1#2{\expandafter\gdef\csname #2\endcsname{#1{#2}}}
\def\eatit#1#2.{\relax}
